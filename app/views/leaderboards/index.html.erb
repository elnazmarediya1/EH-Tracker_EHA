<head>
  <style>
      .link {
          padding-right: 12px;
          display: inline-block;
      }
  </style>
</head>

<div class="index">
  <div class="page">
    <h1>Leaderboard</h1>
    <p><strong>Top 10</strong></p>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Points</th>
        <th scope="col">Volunteer Hours</th>
        <th scope="col">Name</th>
      </tr>
    </thead>

    <tbody>
      <% @top_ten_users.each do |user| %>
        <tr>
          <th scope="row"> <%= user.points %> </th>
          <td> <%= user.volunteer_hours %> </td>
          <td> <%= user.last_name %>, <%= user.first_name %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br/>
  <br/>

  <div class="page">
    <h1>My Statistics</h1>
    <p>Name: <strong><%= current_user.last_name %>, <%= current_user.first_name %></strong></p>
  </div>

  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <strong>Current rank:</strong> <%= @all_users.index(current_user)+1 %> <br>
        <strong>Points:</strong> <%= current_user.points %> <br>
        <strong>Volunteer Hours:</strong> <%= current_user.volunteer_hours %>
      </p>
    </div>
  </div>

  <br/>

</div>
