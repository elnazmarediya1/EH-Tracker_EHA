<%= link_to("Go Back", event_types_path, :class => 'back-link') %>

<div class="edit">
  <div class="page">
    <h2>Edit Event Type</h2>
  </div>

  <%= form_for(@event_type) do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, :required => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :points %>
      <%= f.number_field :points, min: 0, step: :any, :required => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit ('Update'), class: 'btn btn-primary btn-lg btn-block' %>
    </div>

  <% end %>
</div>
