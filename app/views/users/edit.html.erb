<%= link_to("Go Back", users_path, :class => 'back-link') %>

<div class="edit">
  <div class="page">
    <h2>Edit User  -  <%= @user.last_name %>, <%= @user.first_name %></h2>
  </div>

  <%= form_for(@user) do |f| %>
    <% if current_user.superadmin?%>
      <div class="form-group">
        <%= f.label :admin %>
        <%= f.check_box :admin, class: 'form-control' %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :points %>
      <%= f.number_field :points, min: 0, step: :any, :required => true, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :volunteer_hours %>
      <%= f.number_field :volunteer_hours, min: 0, step: :any, :required => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :required => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :required => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :uin %>
      <%= f.number_field :uin, min: 100000000, max: 999999999, step: 1, :required => true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit ('Update'), class: 'btn btn-primary btn-lg btn-block' %>
    </div>

  <% end %>
</div>