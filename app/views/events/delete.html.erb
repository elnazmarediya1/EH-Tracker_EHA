<%= link_to("Go Back", events_path, :class => 'back-link') %>

<div class="delete">

  <div class="page">
    <h2>Confirm Delete</h2>
  </div>

  <%= form_for(@event, :method => 'delete') do |f| %>

    <div class="alert alert-danger" role="alert">
      Are you sure you wish to delete this event - <a class="alert-link"> <%= @event.name %></a>?
    </div>

    <div class="form-group">
      <%= f.submit ('Delete'), class: 'btn btn-primary btn-lg btn-block' %>
    </div>

  <% end %>
</div>
