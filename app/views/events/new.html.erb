<%= link_to("Go Back", events_path, :class => 'back-link') %>

<div class="new">
  <div class="page">
    <h1>Create Event</h1>
  </div>
  <div class="add">
    <%= form_for(@event) do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, :required => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :date %>
        <%= f.datetime_field :date, min: Date.today, :required => true, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, :required => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, :required => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :max_capacity %>
        <%= f.number_field :max_capacity, :required => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :event_type_id %>
        <%= f.select :event_type_id, @types.collect { |type| [ type.name, type.id ] }, :required => true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit ('Create'), class: 'btn btn-primary btn-lg btn-block' %>
      </div>

    <% end %>
  </div>
</div>
